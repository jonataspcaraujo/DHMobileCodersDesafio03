<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    tools:context=".view.activity.ComicDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivHqDetailBackgroud"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/marvel_background"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivHqDetailCover"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:src="@drawable/raster"
            android:foreground="@drawable/image_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"/>

        <TextView
            android:id="@+id/tvHqDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amazing Spider-Man (2014) #1 (Mhan Variant)"
            android:justificationMode="inter_word"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHqDetailCover"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvHqDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SBitten by a radioactive spider, high school student Peter Parker gained the speed, strength and powers of a spider. Adopting the name Spider-Man, Peter hoped to start a career using his new abilities. Taught that with great power comes great responsibility, Spidey has vowed to use his powers to help people."
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="@id/tvHqDetailTitle"
            app:layout_constraintStart_toStartOf="@id/tvHqDetailTitle"
            app:layout_constraintTop_toBottomOf="@id/tvHqDetailTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvHqDetailPublishedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_published_date"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvHqDetailDescription"
            app:layout_constraintStart_toStartOf="@id/tvHqDetailDescription"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvHqDetailPublishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April 30, 2014"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/tvHqDetailPublishedLabel"
            app:layout_constraintStart_toEndOf="@id/tvHqDetailPublishedLabel"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvHqDetailPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_price"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvHqDetailPublishedLabel"
            app:layout_constraintStart_toStartOf="@id/tvHqDetailPublishedLabel"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvHqDetailPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 5,99"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/tvHqDetailPriceLabel"
            app:layout_constraintStart_toEndOf="@id/tvHqDetailPriceLabel"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tvHqDetailPagesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pages"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvHqDetailPriceLabel"
            app:layout_constraintStart_toStartOf="@id/tvHqDetailPriceLabel"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvHqDetailPagesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="@id/tvHqDetailPagesLabel"
            app:layout_constraintStart_toEndOf="@id/tvHqDetailPagesLabel"
            android:layout_marginLeft="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>